<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.viriatussoftware.forterepudio.MainActivity"
    android:layout_gravity="center_vertical|center_horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/button"
        android:background="@drawable/microphone_click"
        android:onClick="onClickMic2 (MainActivity)"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/hashtag"
        android:scaleType="center"
        android:adjustViewBounds="false"/>

    <TextView
        android:padding="10dp"
        android:id="@+id/hashtag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:gravity="center"
        android:text="#forterepudio"
        android:textStyle="italic|bold"
        android:layout_above="@+id/imageView2"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/mixordia_comercial_image"
        android:id="@+id/imageView2"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
